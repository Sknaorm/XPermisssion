<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Appearance">
        <attr name="bind_id" />
        <attr name="isSelected" format="boolean" />
        <attr name="selected_text_color" format="color" />
        <attr name="default_text_color" format="color" />
        <attr name="selected_style" format="reference" />
        <attr name="default_style" format="reference" />
        <attr name="selected_drawable" format="reference" />
        <attr name="default_drawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="Appearance_State">
        <attr name="as_corners_radius" format="dimension"/> >
        <attr name="as_corners_left_radius" format="dimension" />
        <attr name="as_corners_top_radius" format="dimension" />
        <attr name="as_corners_right_radius" format="dimension" />
        <attr name="as_corners_bottom_radius" format="dimension" />
        <attr name="as_solid_color" format="color" />
        <attr name="as_gradient_start_color" format="color" />
        <attr name="as_gradient_center_color" format="color" />
        <attr name="as_gradient_end_color" format="color" />
        <attr name="as_gradient_center_x" format="float" />
        <attr name="as_gradient_center_y" format="float" />
        <attr name="as_gradient_radius" format="dimension" />
        <attr name="as_gradient_type" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>
        <attr name="as_gradient_angle" format="enum">
            <enum name="LEFT_RIGHT" value="0" />
            <enum name="BL_TR" value="45" />
            <enum name="BOTTOM_TOP" value="90" />
            <enum name="BR_TL" value="135" />
            <enum name="RIGHT_LEFT" value="180" />
            <enum name="TR_BL" value="225" />
            <enum name="TOP_BOTTOM" value="270" />
            <enum name="TL_BR" value="315" />
        </attr>
        <attr name="as_stroke_color" format="color" />
        <attr name="as_stroke_width" format="dimension" />
        <attr name="as_stroke_dash_width" format="dimension" />
        <attr name="as_stroke_dash_gap" format="dimension" />
    </declare-styleable>
</resources>