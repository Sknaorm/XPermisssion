<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppearanceLayout">
        <attr name="bind_id" />
        <attr name="isSelected" format="boolean" />
    </declare-styleable>
    <declare-styleable name="Appearance">
        <attr name="bind_id" />
        <attr name="text_color" format="color" />
        <attr name="shape_drawable" format="reference" />
        <attr name="corners_radius" format="dimension" />
        <attr name="corners_radius_weight" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
        <attr name="selector_state" format="enum">
            <enum name="DEFAULT" value="0" />
            <enum name="SELECTED" value="1" />
            <enum name="UN_SELECTED" value="2" />
        </attr>
        <attr name="corners_left_radius" format="dimension" />
        <attr name="corners_top_radius" format="dimension" />
        <attr name="corners_right_radius" format="dimension" />
        <attr name="corners_bottom_radius" format="dimension" />
        <attr name="solid_color" format="color" />
        <attr name="gradient_start_color" format="color" />
        <attr name="gradient_center_color" format="color" />
        <attr name="gradient_end_color" format="color" />
        <attr name="gradient_center_x" format="float" />
        <attr name="gradient_center_y" format="float" />
        <attr name="gradient_radius" format="fraction" />
        <attr name="gradient_type" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>
        <attr name="gradient_angle" format="enum">
            <enum name="LEFT_RIGHT" value="0" />
            <enum name="BL_TR" value="45" />
            <enum name="BOTTOM_TOP" value="90" />
            <enum name="BR_TL" value="135" />
            <enum name="RIGHT_LEFT" value="180" />
            <enum name="TR_BL" value="225" />
            <enum name="TOP_BOTTOM" value="270" />
            <enum name="TL_BR" value="315" />
        </attr>
        <attr name="stroke_color" format="color" />
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_dash_width" format="dimension" />
        <attr name="stroke_dash_gap" format="dimension" />
    </declare-styleable>
</resources>