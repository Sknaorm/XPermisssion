<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_test"
        android:padding="15dp"
        android:text="我 origin 你妈对的" />

    <com.cn.layout.ShapeLayout
        app:stroke_color="#333333"
        app:stroke_width="10dp"
        app:stroke_dash_width="10dp"
        app:stroke_dash_gap="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:corners_radius="34dp"
        app:gradient_type="linear"
        app:gradient_start_color="@color/colorPrimary"
        app:gradient_end_color="@color/colorAccent">

        <TextView
            android:id="@+id/abc"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="15dp"
            android:text="我 origin 你妈对的" />
    </com.cn.layout.ShapeLayout>
</LinearLayout>
